<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/login_member_page"
    tools:context="com.example.djamel.cosplit.LoginMember">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/Name1"
        android:hint="email"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        app:showOutline="false"
        app:roundedCorners="true"
        app:bootstrapSize="lg"
        app:bootstrapBrand="success"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/Name2"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_marginTop="17dp"
        android:textSize="24sp"
        android:layout_below="@+id/Name1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"
        app:bootstrapBrand="success"/>

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.beardedhen.androidbootstrap.BootstrapLabel"
        android:layout_above="@+id/Name1"
        android:layout_centerHorizontal="true"
        android:id="@+id/view2"
        android:text="Conexion :"
        android:textSize="34sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:elevation="1dp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registre"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:width="200dp"
        android:onClick="sendviewRegister"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/Name2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Connectez-vous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView8"
        android:textSize="34sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>