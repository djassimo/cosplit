<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.djamel.cosplit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".RegisterPage" />
        <activity
            android:name=".HomePage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MemberRegister" />
        <activity android:name=".LoginMember" />
        <activity android:name=".MemberCode" />
        <activity android:name=".AskForMoney" />
        <activity android:name=".EditProfilePage" />
        <activity android:name=".AddCost">
        </activity>
        <activity android:name=".CostMenu"/>

    </application>

</manifest>